{%- liquid
  assign container_tag = 'p'
  assign item_tag = 'span'

  if show_date and show_read_time
    assign container_tag = 'ul'
    assign item_tag = 'li'
  endif

  assign classes = 'flex items-center'
  if additional_classes != blank
    assign classes = classes | append: ' ' | append: additional_classes
  endif

  if additional_classes contains 'gap-'
    assign classes = classes | append: ''
  else
    assign classes = classes | append: ' gap-4 [--gap:calc(var(--spacing)*4)]'
  endif
-%}
<{{ container_tag }} class='{{ classes }}'>
  {% assign li_classes = 'not-first:before:w-3 not-first:before:h-3 not-first:before:bg-current not-first:before:mask-(--bullet-icon) not-first:before:mask-contain not-first:before:rounded-full not-first:before:inline-block not-first:before:top-px not-first:before:relative not-first:before:mr-(--gap)' %}
  {%- if show_date -%}
    <{{ item_tag }} class='{{ li_classes }}'>
      {{- article.published_at | time_tag: format: 'date' -}}
    </{{ item_tag }}>
  {%- endif -%}
  {%- if show_read_time -%}
    <{{ item_tag }} class='{{ li_classes }}'>
      {{ article.content | strip_html | size | divided_by: 5 | divided_by: 200 | ceil | plus: 1 }} min read
    </{{ item_tag }}>
  {%- endif -%}
  <style>
    :root {
      --bullet-icon: url('{{ "bullet-icon.svg" | asset_url }}');
    }
  </style>
</{{ container_tag }}>
