{%- liquid
  assign mobile_column_span = block.settings.mobile_column_span | default: 1
  assign column_classes = 'md:flex-1 md:shrink-0 md:grow-0'

  case mobile_column_span
    when '1'
      assign column_classes = column_classes | append: ' col-span-1'
    when '2'
      assign column_classes = column_classes | append: ' col-span-2'
    when '3'
      assign column_classes = column_classes | append: ' col-span-3'
  endcase
-%}
<div class='{{ column_classes }}' {{ block.shopify_attributes }}>
  {% content_for 'blocks' %}
</div>
{% schema %}
{
  "name": "Column",
  "tag": null,
  "settings": [
    {
      "type": "select",
      "id": "mobile_column_span",
      "label": "Mobile columns",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        },
        {
          "value": "3",
          "label": "3 columns"
        }
      ],
      "default": "1",
      "info": "Number of columns to span on mobile devices"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "@theme"
    }
  ],
  "presets": [
    {
      "name": "Column"
    }
  ]
}
{% endschema %}
